{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "serve:php": "php artisan serve --host 0.0.0.0 --port 8000",
        "dev:mobile": "concurrently -k -n vite,php -c blue,green \"npm:dev\" \"npm:serve:php\"",
        "clean:hot": "powershell -NoProfile -Command \"if (Test-Path 'public/hot') { Remove-Item 'public/hot' -Force }\"",
        "start:prod": "npm run clean:hot && npm run build && npm run serve:php",
        "dev:all": "concurrently -k -n mobile,prod -c cyan,magenta \"npm:dev:mobile\" \"npm:start:prod\""
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.4"
    }
}
